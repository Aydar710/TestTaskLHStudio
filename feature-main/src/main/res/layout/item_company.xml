<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_company"
        android:layout_width="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:color/holo_red_light"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/iv_company"
        app:layout_constraintTop_toTopOf="@id/iv_company"
        app:layout_constraintBottom_toBottomOf="@id/iv_company"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="12dp"
        tools:text="Some Company Name"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>